<h2>RegisterEmployee</h2>

@using (Html.BeginForm("RegisterUser", "Admin", FormMethod.Post, new { id = "EmpRegistrationForm" }))
{
        @Html.LabelFor(model => model.BranchId);
        @Html.DropDownListFor(model => model.BranchId, Model.Branches);

        @Html.LabelFor(model => model.UserTypeId);
        @Html.DropDownListFor(model => model.UserTypeId, Model.UserTypes);

        @Html.LabelFor(model => model.GenderId);
        @Html.DropDownListFor(model => model.GenderId, Model.Genders);

        @Html.LabelFor(model => model.Name);
        @Html.EditorFor(model => model.Name);

        @Html.LabelFor(model => model.UserName);
        @Html.EditorFor(model => model.UserName);

        @Html.LabelFor(model => model.Password);
        @Html.EditorFor(model => model.Password);

        @Html.LabelFor(model => model.Email);
        @Html.EditorFor(model => model.Email);

        @Html.LabelFor(model => model.ContactNo);
        @Html.EditorFor(model => model.ContactNo);

        @Html.LabelFor(model => model.CNIC);
        @Html.EditorFor(model => model.CNIC);

        @Html.LabelFor(model => model.AddressDetails);
        @Html.EditorFor(model => model.AddressDetails);

        @Html.LabelFor(model => model.Qualification);
        @Html.EditorFor(model => model.Qualification);
    <input type="submit" value="Add" />
}